<!-- hospital.hbs -->
<form id="search-hospital" >
    <div class = 'ui-widget'>
    <label for="inputCity"> Enter city </label>
    <input type="text" id="inputCity" name="inputCity"> 
    <label for="distance-dropdown"> Distance(optional) </label>
    <select id="distances">
        <option value="0"> within city</option>
        <option value="15"> 15 miles</option>
        <option value="35"> 30 miles</option>
        <option value="50"> 50 miles</option>
        <option value="200"> Any Distance</option>
    </select>
    <input type='submit' id="bnt" value="Search">
    </div>
</form>

<h3 id="count-here"></h3>
<div id="table-here" class="hospital-table"hidden></div>
<script id="resultTemplate" type="text/x-handlebars-template">
    <table>
        <thead>
                <div class="table-header">Hospital</div>
        </thead>
        <tbody>
            \{{#each data}}
                <tr>
                    <td>
                    <strong>\{{hosName}}<br></strong>
                    \{{addr}}<br>
                    \{{city}} \{{st}} \{{zip}}<br>
                    \{{phone}}<br>
                    \{{dist}} miles<br>
                    </td>
                </tr>
            \{{/each}}
        </tbody>
    </table>
</script>

