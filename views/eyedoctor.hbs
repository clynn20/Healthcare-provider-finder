<!-- eyedoctor.hbs -->
<main>
<form id="search-eyedoctor" >
    <div class = 'ui-widget'>
    <label for="inputCity"> Enter city </label>
    <input type="text" id="inputCity" name="inputCity"> 
    <label for="distance-dropdown"> Distance(optional) </label>
    <select id="distances">
        <option value="0"> within city</option>
        <option value="15"> 15 miles</option>
        <option value="25"> 25 miles</option>
        <option value="35"> 35 miles</option>
	  <option value="45"> 45 miles</option>
	  <option value="55"> 55 miles</option>
    </select>
    <input type='submit' id="bnt" value="Search">
    </div>
</form>

<h3 id="count-here"></h3>
<div id="table-here" class="eyedoctor-table"hidden></div>
<script id="resultTemplate" type="text/x-handlebars-template">
    <table>
        <thead>
                <div class="table-header">Doctors</div>
        </thead>
        <tbody>
            \{{#each data}}
                <tr>
                    <td>
                    <strong>\{{Primary Care Provider}}<br></strong>
			  \{{Practice}}<br>
                    \{{Address}}<br>
                    \{{City}} \{{State}} \{{Zip Code}}<br>
                    \{{Phone Number}}<br>
			  \{{Associated With}}<br>
			  \{{Hospital Affiliations}}<br>
                    </td>
                </tr>
            \{{/each}}
        </tbody>
    </table>
</script>
</main>

